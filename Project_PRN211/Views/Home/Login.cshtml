
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="~/css/style.css">

    <title>Login</title>
</head>

<body>
    <div style="margin-top: 100px;" class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/images/undraw_remotely_2j6y.svg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="mb-4">
                                <h1 style="font-weight: bold;">Sign In</h1>
                                <p class="mb-4">Only for employee. If you just are the guest, you don't need to login. Let comeback to home page!</p>
                            </div>
                            <form action="/Home/loginAd" method="post">
                                <div class="form-group first">
                                    <label style="font-weight: bold;" for="username">Username</label>
                                    <input type="text" class="form-control" id="username" name="para1" required>
                                </div>
                                <div class="form-group last mb-4">
                                    <label style="font-weight: bold;" for="password">Password</label>
                                    <input type="password" name="para2" class="form-control" id="password" required>

                                </div>
                                <input type="submit" value="Log In" class="btn btn-block btn-primary">
                                @if (ViewBag.Error is not null)
                                {
                                    <div style="margin-top: 20px" class="alert alert-danger" role="alert">
                                        @ViewBag.Error
                                    </div>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>