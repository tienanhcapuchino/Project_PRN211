@using Project_PRN211.Models;
@model Guest

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Hotel - TIEN ANH CAPUCHINO</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/images/Logo_PRN211.png" type="image/png" />
    <!-- Scrollbar Custom CSS -->
    @*<link rel="stylesheet" href="~/css/jquery.mCustomScrollbar.min.css">*@
</head>
<!-- body -->
<body class="main-layout">
    <!-- loader  -->
    @*<div class="loader_bg">
    <div class="loader"><img src="images/loading.gif" alt="#" /></div>
    </div>*@
    <!-- end loader -->
    <!-- header -->
    @await Html.PartialAsync("Header")

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <form class="user" action="/Guest/UpdateGuest/@Model.RoomNo" method="post">
                            <input type="hidden" class="form-control form-control-user" name="gu.RoomNo"
                                   value="@Model.RoomNo" />
                            <input type="hidden" class="form-control form-control-user" name="gu.GuestId"
                                   value="@Model.GuestId" />
                            <div class="p-5">
                                @if (ViewBag.ok == 1)
                                {
                                    <div id="alertdiv" class="alert alert-success" role="alert">
                                        Update successfully!
                                    </div>
                                }
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Guest Detail</h1>
                                </div>
                                @*<div class="form-group">
                                <label>RoomNo:</label>
                                <input type="text" disabled class="form-control form-control-user" required name="gu.RoomNo"
                                value="@Model.RoomNo">
                                </div>*@

                                <div class="form-group">
                                    <label>Full name</label>
                                    <input type="text" name="gu.FullName" class="form-control form-control-user"
                                           value="@Model.FullName" required>
                                </div>
                                <div class="form-group">
                                    <label>Date of Birth</label>
                                    <input type="date" name="gu.Dob" class="form-control form-control-user"
                                           value="@Model.Dob?.ToString("yyyy-MM-dd")" required max="@DateTime.Now">
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-12 mb-6 mb-sm-0">
                                        <label>Gender: </label>
                                        <label for="nam">
                                            <input id="nam" type="radio" name="gu.Gender" value="true" @(Model.Gender == true ? "checked" : "") />Male
                                        </label>
                                        <label for="nu">
                                            <input id="nu" type="radio" name="gu.Gender" value="false" @(Model.Gender == false ? "checked" : "") />FeMale
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Mobile</label>
                                    <input type="text" class="form-control form-control-user" required maxlength="10" name="gu.PhoneNo"
                                           value="@Model.PhoneNo">
                                </div>
                                <div class="form-group">
                                    <label>E-mail</label>
                                    <input type="email" class="form-control form-control-user" required name="gu.Email"
                                           value="@Model.Email">
                                </div>
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" class="form-control form-control-user" required name="gu.Address"
                                           value="@Model.Address">
                                </div>
                                <div class="form-group">
                                    <label>Arrival Date</label>
                                    <input type="date" name="gu.ArrivalDate" class="form-control form-control-user"
                                           value="@Model.ArrivalDate?.ToString("yyyy-MM-dd")" required>
                                </div>
                                <div class="form-group">
                                    <label>Departure Date</label>
                                    <input type="date" name="gu.DepartureDate" class="form-control form-control-user"
                                           value="@Model.DepartureDate?.ToString("yyyy-MM-dd")" required>
                                </div>
                                <div class="d-flex flex-row">
                                    <input class="btn btn-primary p-2" style="display: block; width: 100px" type="submit" value="Save" name="Update" />
                                    <a href="/Bill/ViewBill/@Model.RoomNo" class="btn btn-outline-primary p-2">Check out</a>
                                </div>
                                @if (ViewBag.Err is not null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewBag.Err
                                    </div>
                                }
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->

    <div id="about" class="about">
        <div class="container-fluid">
            <div class="row d_flex">
                <div class="col-md-6">
                    <div class="about_text">
                        <div class="titlepage">
                            <h2>About Our Hotel</h2>
                            <p>The hotel was established in 2022 based on the project of the subject PRN211. The hotel is operated by only 1 member. However, the service quality is still among the top in Vietnam. The number of rooms is constantly updated to meet your needs. Room quality is also upgraded over time. Enjoy the excellent service of our hotel. </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about_img">
                        <figure><img src="~/images/about_img.jpg" alt="#" /></figure>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("Footer")
    <!-- end footer -->
    <!-- Javascript files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>




